<div class="container">
  <div class="row">
      <div class="col-3">
      </div>
      <div class="col"> 
        <h2>Editar Perfil <%= resource_name.to_s.humanize %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

    
          <div class="form-group mb-2">
            <%= image_tag current_user.image, class: 'rounded-circle'%><br/><br/>
            <%= f.label :image, "Cambia tu imagen de perfil" %>
            <%= f.file_field :image, accept: 'image/*', required: true, class: 'form-control' %>        
          </div> 

          <div class="field mb-2">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field mb-2">
            <%= f.label :contraseña%> <i>(Déja en blanco si no quieres cambiarla)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
            <% if @minimum_password_length %>          
              <em><%= @minimum_password_length %> caracteres mínimo</em>
            <% end %>
          </div>

          <div class="field mb-2">
            <%= f.label :confirma_contraseña %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          </div>

          <div class="field mb-2">
            <%= f.label :contraseña_actual %> <i>(Necesitamos tu contraseña actual para confirmar tus cambios)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
          </div>

          <div class="form-group mb-2">
            <%= f.label :nombre %><br />
            <%= f.text_field :name, autocomplete: "nombre", class: 'form-control' %>
          </div>

          <div class="form-group mb-2">        
            <%= f.hidden_field :role, class: 'form-control' %>
          </div>         
                
          
          <div class="actions">
            <%= f.submit "Update", class: "btn btn btn-secondary text-white mt-3" %>
          </div>
        <% end %><br/>

        <h4>Descontento?</h4>
                <div><%= button_to "Cancelar mi suscrpción", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn btn-secondary text-white" %></div>

        <%= link_to "Volver", :back %>
      </div>
      <div class="col-3">
      </div>
      </div>
 </div>
